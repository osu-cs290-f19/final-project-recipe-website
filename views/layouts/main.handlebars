    <footer class="page-footer font-small special-color-dark">
        <!--Footer Elements-->
        <div class="container">
            <!-- Copyright -->
            <div class="footer-copyright text-center py-3">Â© 2019 Copyright:
            </div>
            <!-- Copyright -->
